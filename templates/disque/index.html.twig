{% extends 'base.html.twig' %}

{% block title %}Disque index{% endblock %}

{% block body %}
    <h1>Disque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for disque in disques %}
            <tr>
                <td>{{ disque.id }}</td>
                <td>{{ disque.Name }}</td>
                <td>{{ disque.Date ? disque.Date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('disque_show', {'id': disque.id}) }}">show</a>
                    <a href="{{ path('disque_edit', {'id': disque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('disque_new') }}">Create new</a>
{% endblock %}
